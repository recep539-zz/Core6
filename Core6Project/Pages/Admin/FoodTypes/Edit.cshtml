@page
@model Core6Project.Pages.Admin.FoodTypes.EditModel

<form method="post">
    <input hidden asp-for="FoodType.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="FoodType.Name"></label>
            <input asp-for="@Model.FoodType.Name" class="form-control" />
            <span asp-validation-for="FoodType.Name" class="text-danger"></span>
        </div>
        <button class="btn btn-success" type="submit" style="width:150px;">Update</button>
    </div>
</form>
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}